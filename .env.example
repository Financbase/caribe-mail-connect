# Vite environment variables for Supabase and app config
# Copy this file to .env or .env.local and fill in your values

# Demo mode (bypasses real Supabase auth in dev if supported by the app)
VITE_USE_DEMO_MODE=false

# Supabase (Frontend)
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key

# Application
VITE_APP_ENV=development
VITE_APP_VERSION=0.0.0
NODE_ENV=development

# API
VITE_API_BASE_URL=http://localhost:3000

# Logging / DevTools
VITE_LOG_LEVEL=info
VITE_ENABLE_DEV_TOOLS=false

# Payment Integration (Story 1.1)
# Stripe Configuration
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# ATH MÃ³vil Configuration (Puerto Rico)
ATH_MOVIL_API_KEY=your_ath_movil_api_key
ATH_MOVIL_MERCHANT_ID=your_ath_movil_merchant_id
ATH_MOVIL_WEBHOOK_SECRET=your_ath_movil_webhook_secret

# Payment Processing
VITE_PAYMENT_ENVIRONMENT=sandbox
VITE_ENABLE_ATH_MOVIL=true
VITE_ENABLE_STRIPE=true

# Billing Configuration
VITE_DEFAULT_CURRENCY=USD
VITE_BILLING_GRACE_PERIOD_DAYS=5
VITE_PAYMENT_RETRY_ATTEMPTS=3

# Communication System (Story 1.3)
# Email Provider (Resend)
RESEND_API_KEY=re_your_resend_api_key
RESEND_FROM_EMAIL=noreply@yourdomain.com
RESEND_FROM_NAME=Your Business Name

# SMS Provider (Twilio)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_FROM_NUMBER=+1234567890
TWILIO_MESSAGING_SERVICE_SID=your_messaging_service_sid

# WhatsApp Business API
WHATSAPP_PHONE_NUMBER_ID=your_whatsapp_phone_number_id
WHATSAPP_ACCESS_TOKEN=your_whatsapp_access_token
WHATSAPP_BUSINESS_ACCOUNT_ID=your_business_account_id
WHATSAPP_WEBHOOK_VERIFY_TOKEN=your_webhook_verify_token

# Communication Configuration
VITE_ENABLE_EMAIL=true
VITE_ENABLE_SMS=true
VITE_ENABLE_WHATSAPP=true
VITE_DEFAULT_COMMUNICATION_LANGUAGE=en
VITE_COMMUNICATION_RATE_LIMIT_PER_MINUTE=100

# =====================================================
# AI INTEGRATIONS - Story 2.1: AI-Powered Automation & Intelligence
# =====================================================

# Hugging Face API (for NLP models)
HUGGINGFACE_API_KEY=your_huggingface_api_key

# Cloudflare AI (for edge AI processing)
CLOUDFLARE_ACCOUNT_ID=your_cloudflare_account_id
CLOUDFLARE_API_TOKEN=your_cloudflare_api_token

# OpenAI (for LangChain agents)
OPENAI_API_KEY=your_openai_api_key

# Anthropic (for Claude models)
ANTHROPIC_API_KEY=your_anthropic_api_key

# Google AI (for Gemini models)
GOOGLE_AI_API_KEY=your_google_ai_api_key

# LangSmith (for LangChain monitoring and debugging)
LANGCHAIN_TRACING_V2=true
LANGCHAIN_ENDPOINT=https://api.smith.langchain.com
LANGCHAIN_API_KEY=your_langsmith_api_key
LANGCHAIN_PROJECT=caribe-mail-connect

# Additional AI Services (optional)
COHERE_API_KEY=your_cohere_api_key
MISTRAL_AI_API_KEY=your_mistral_api_key
GROQ_API_KEY=your_groq_api_key

# AI Feature Flags
VITE_ENABLE_AI_CHAT=true
VITE_ENABLE_LANGCHAIN_AGENTS=true
VITE_ENABLE_LANGGRAPH_WORKFLOWS=true
VITE_ENABLE_PYDANTIC_AI=true
VITE_ENABLE_HUGGINGFACE_MODELS=true
VITE_ENABLE_CLOUDFLARE_AI=true
VITE_ENABLE_VOICE_RECOGNITION=false
VITE_ENABLE_IMAGE_PROCESSING=true
VITE_ENABLE_DOCUMENT_AI=true
VITE_ENABLE_PREDICTIVE_ANALYTICS=true

# AI Performance Configuration
AI_RATE_LIMIT_PER_MINUTE=50
AI_TIMEOUT_MS=60000
AI_CACHE_TTL_SECONDS=3600
AI_MAX_TOKENS=2000
AI_TEMPERATURE=0.7

# Vector Database (optional - for advanced AI features)
PINECONE_API_KEY=your_pinecone_api_key
PINECONE_ENVIRONMENT=your_pinecone_environment
WEAVIATE_URL=your_weaviate_url
WEAVIATE_API_KEY=your_weaviate_api_key

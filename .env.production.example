# PRMCMS Production Environment Configuration
# Copy this file to .env.production and update with your actual production values
# ⚠️  NEVER commit actual production credentials to version control

# =============================================================================
# REQUIRED PRODUCTION VARIABLES
# =============================================================================

# Supabase Configuration (Production)
VITE_SUPABASE_URL=https://your-production-project.supabase.co
VITE_SUPABASE_ANON_KEY=your_production_supabase_anon_key_here

# API Configuration (Production)
VITE_API_BASE_URL=https://api.prmcms.com
VITE_API_KEY=your_production_api_key_here

# Google Maps API (Production)
VITE_GOOGLE_MAPS_API_KEY=your_production_google_maps_api_key_here

# Error Tracking (Production)
VITE_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Environment
NODE_ENV=production
VITE_APP_ENV=production
VITE_APP_VERSION=1.0.0

# Domain Configuration
VITE_APP_DOMAIN=https://prmcms.com
VITE_APP_NAME=PRMCMS
VITE_APP_DESCRIPTION=Professional Resource Management & Customer Management System

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# HTTPS Enforcement
VITE_FORCE_HTTPS=true
VITE_HSTS_MAX_AGE=31536000

# Security Headers
VITE_ENABLE_SECURITY_HEADERS=true
VITE_CSP_REPORT_URI=https://prmcms.com/csp-report

# Allowed Origins (comma-separated)
VITE_ALLOWED_ORIGINS=https://prmcms.com,https://www.prmcms.com,https://app.prmcms.com

# Security Audit
VITE_SECURITY_AUDIT_ENABLED=true

# =============================================================================
# FEATURE FLAGS (PRODUCTION)
# =============================================================================

# Core Features
VITE_ENABLE_GOOGLE_MAPS=true
VITE_ENABLE_REAL_TIME_TRACKING=true
VITE_FEATURE_NEW_SIGNUP=true
VITE_FEATURE_ANALYTICS=true

# Production Safety
VITE_ENABLE_DEV_TOOLS=false
VITE_LOG_LEVEL=error

# =============================================================================
# ANALYTICS & MONITORING
# =============================================================================

# Google Analytics
VITE_GOOGLE_ANALYTICS_ID=GA-XXXXX-Y

# Performance Monitoring
VITE_ENABLE_PERFORMANCE_MONITORING=true
VITE_PERFORMANCE_SAMPLE_RATE=0.1

# User Analytics
VITE_ENABLE_USER_ANALYTICS=true
VITE_ANALYTICS_SAMPLE_RATE=1.0

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================

# Email Service
VITE_EMAIL_SERVICE_URL=https://email.prmcms.com
VITE_EMAIL_API_KEY=your_email_service_api_key_here

# SMS Service
VITE_SMS_SERVICE_URL=https://sms.prmcms.com
VITE_SMS_API_KEY=your_sms_service_api_key_here

# File Storage
VITE_STORAGE_BUCKET=prmcms-production-files
VITE_CDN_URL=https://cdn.prmcms.com

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================

# Caching
VITE_ENABLE_CACHING=true
VITE_CACHE_TTL=3600

# API Rate Limiting
VITE_API_RATE_LIMIT=1000
VITE_API_RATE_WINDOW=3600

# Image Optimization
VITE_ENABLE_IMAGE_OPTIMIZATION=true
VITE_IMAGE_QUALITY=80

# =============================================================================
# BACKUP & RECOVERY
# =============================================================================

# Backup Configuration
VITE_BACKUP_ENABLED=true
VITE_BACKUP_FREQUENCY=daily
VITE_BACKUP_RETENTION=30

# Recovery Settings
VITE_RECOVERY_ENDPOINT=https://recovery.prmcms.com
VITE_RECOVERY_API_KEY=your_recovery_api_key_here

# =============================================================================
# COMPLIANCE & LEGAL
# =============================================================================

# GDPR Compliance
VITE_GDPR_ENABLED=true
VITE_PRIVACY_POLICY_URL=https://prmcms.com/privacy
VITE_TERMS_OF_SERVICE_URL=https://prmcms.com/terms

# Data Retention
VITE_DATA_RETENTION_DAYS=2555  # 7 years
VITE_LOG_RETENTION_DAYS=90

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================

# Build Configuration
VITE_BUILD_TIMESTAMP=auto
VITE_BUILD_VERSION=auto
VITE_BUILD_COMMIT=auto

# Health Checks
VITE_HEALTH_CHECK_ENABLED=true
VITE_HEALTH_CHECK_INTERVAL=30000

# Maintenance Mode
VITE_MAINTENANCE_MODE=false
VITE_MAINTENANCE_MESSAGE=System maintenance in progress

# =============================================================================
# DEVELOPMENT OVERRIDES (SHOULD BE FALSE IN PRODUCTION)
# =============================================================================

# Debug Settings (MUST BE FALSE IN PRODUCTION)
VITE_DEBUG_MODE=false
VITE_VERBOSE_LOGGING=false
VITE_ENABLE_MOCK_DATA=false

# Testing (MUST BE FALSE IN PRODUCTION)
VITE_ENABLE_TEST_ROUTES=false
VITE_ENABLE_TEST_DATA=false

# =============================================================================
# OPTIONAL INTEGRATIONS
# =============================================================================

# Slack Integration
# VITE_SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/webhook/url
# VITE_SLACK_CHANNEL=#alerts

# Microsoft Teams Integration
# VITE_TEAMS_WEBHOOK_URL=https://your-org.webhook.office.com/webhookb2/your-webhook

# Zapier Integration
# VITE_ZAPIER_WEBHOOK_URL=https://hooks.zapier.com/hooks/catch/your-webhook

# =============================================================================
# NOTES
# =============================================================================

# 1. All VITE_ prefixed variables are exposed to the client-side code
# 2. Never include sensitive server-side secrets in VITE_ variables
# 3. Use environment-specific values for different deployment stages
# 4. Regularly rotate API keys and secrets
# 5. Monitor for unauthorized access to environment variables
# 6. Use a secrets management service for highly sensitive data

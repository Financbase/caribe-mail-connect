# PRMCMS Staging Environment Configuration
# Copy this file to .env.staging and update with your actual staging values
# This environment should mirror production but use separate resources

# =============================================================================
# REQUIRED STAGING VARIABLES
# =============================================================================

# Supabase Configuration (Staging)
VITE_SUPABASE_URL=https://your-staging-project.supabase.co
VITE_SUPABASE_ANON_KEY=your_staging_supabase_anon_key_here

# API Configuration (Staging)
VITE_API_BASE_URL=https://staging-api.prmcms.com
VITE_API_KEY=your_staging_api_key_here

# Google Maps API (Staging - can use same as production)
VITE_GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# Error Tracking (Staging)
VITE_SENTRY_DSN=https://your-staging-sentry-dsn@sentry.io/staging-project-id

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Environment
NODE_ENV=staging
VITE_APP_ENV=staging
VITE_APP_VERSION=1.0.0-staging

# Domain Configuration
VITE_APP_DOMAIN=https://staging.prmcms.com
VITE_APP_NAME=PRMCMS (Staging)
VITE_APP_DESCRIPTION=PRMCMS Staging Environment

# =============================================================================
# SECURITY CONFIGURATION (RELAXED FOR TESTING)
# =============================================================================

# HTTPS Enforcement
VITE_FORCE_HTTPS=true
VITE_HSTS_MAX_AGE=3600

# Security Headers
VITE_ENABLE_SECURITY_HEADERS=true
VITE_CSP_REPORT_URI=https://staging.prmcms.com/csp-report

# Allowed Origins
VITE_ALLOWED_ORIGINS=https://staging.prmcms.com,https://staging-app.prmcms.com

# Security Audit
VITE_SECURITY_AUDIT_ENABLED=true

# =============================================================================
# FEATURE FLAGS (STAGING - ENABLE ALL FOR TESTING)
# =============================================================================

# Core Features
VITE_ENABLE_GOOGLE_MAPS=true
VITE_ENABLE_REAL_TIME_TRACKING=true
VITE_FEATURE_NEW_SIGNUP=true
VITE_FEATURE_ANALYTICS=true

# Development Tools (ALLOWED IN STAGING)
VITE_ENABLE_DEV_TOOLS=true
VITE_LOG_LEVEL=debug

# Testing Features
VITE_ENABLE_TEST_ROUTES=true
VITE_ENABLE_TEST_DATA=true
VITE_ENABLE_MOCK_DATA=false

# =============================================================================
# ANALYTICS & MONITORING (STAGING)
# =============================================================================

# Google Analytics (Staging)
VITE_GOOGLE_ANALYTICS_ID=GA-STAGING-Y

# Performance Monitoring
VITE_ENABLE_PERFORMANCE_MONITORING=true
VITE_PERFORMANCE_SAMPLE_RATE=1.0

# User Analytics
VITE_ENABLE_USER_ANALYTICS=true
VITE_ANALYTICS_SAMPLE_RATE=1.0

# =============================================================================
# EXTERNAL SERVICES (STAGING)
# =============================================================================

# Email Service (Staging)
VITE_EMAIL_SERVICE_URL=https://staging-email.prmcms.com
VITE_EMAIL_API_KEY=your_staging_email_api_key_here

# SMS Service (Staging)
VITE_SMS_SERVICE_URL=https://staging-sms.prmcms.com
VITE_SMS_API_KEY=your_staging_sms_api_key_here

# File Storage (Staging)
VITE_STORAGE_BUCKET=prmcms-staging-files
VITE_CDN_URL=https://staging-cdn.prmcms.com

# =============================================================================
# PERFORMANCE CONFIGURATION (RELAXED)
# =============================================================================

# Caching (Shorter TTL for testing)
VITE_ENABLE_CACHING=true
VITE_CACHE_TTL=300

# API Rate Limiting (Higher limits for testing)
VITE_API_RATE_LIMIT=5000
VITE_API_RATE_WINDOW=3600

# Image Optimization
VITE_ENABLE_IMAGE_OPTIMIZATION=true
VITE_IMAGE_QUALITY=90

# =============================================================================
# TESTING CONFIGURATION
# =============================================================================

# Test Data
VITE_ENABLE_TEST_DATA=true
VITE_TEST_USER_EMAIL=test@staging.prmcms.com
VITE_TEST_USER_PASSWORD=StagingTestPass123!

# Load Testing
VITE_ENABLE_LOAD_TESTING=true
VITE_LOAD_TEST_USERS=100

# E2E Testing
VITE_ENABLE_E2E_TESTING=true
VITE_E2E_BASE_URL=https://staging.prmcms.com

# =============================================================================
# DEBUGGING & DEVELOPMENT
# =============================================================================

# Debug Settings (ALLOWED IN STAGING)
VITE_DEBUG_MODE=true
VITE_VERBOSE_LOGGING=true
VITE_ENABLE_CONSOLE_LOGS=true

# Development Tools
VITE_ENABLE_REDUX_DEVTOOLS=true
VITE_ENABLE_REACT_DEVTOOLS=true

# =============================================================================
# BACKUP & RECOVERY (STAGING)
# =============================================================================

# Backup Configuration (Less frequent)
VITE_BACKUP_ENABLED=true
VITE_BACKUP_FREQUENCY=weekly
VITE_BACKUP_RETENTION=7

# Recovery Settings
VITE_RECOVERY_ENDPOINT=https://staging-recovery.prmcms.com
VITE_RECOVERY_API_KEY=your_staging_recovery_api_key_here

# =============================================================================
# COMPLIANCE & LEGAL (STAGING)
# =============================================================================

# GDPR Compliance (Testing)
VITE_GDPR_ENABLED=true
VITE_PRIVACY_POLICY_URL=https://staging.prmcms.com/privacy
VITE_TERMS_OF_SERVICE_URL=https://staging.prmcms.com/terms

# Data Retention (Shorter for staging)
VITE_DATA_RETENTION_DAYS=90
VITE_LOG_RETENTION_DAYS=30

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================

# Build Configuration
VITE_BUILD_TIMESTAMP=auto
VITE_BUILD_VERSION=auto
VITE_BUILD_COMMIT=auto

# Health Checks
VITE_HEALTH_CHECK_ENABLED=true
VITE_HEALTH_CHECK_INTERVAL=10000

# Maintenance Mode
VITE_MAINTENANCE_MODE=false
VITE_MAINTENANCE_MESSAGE=Staging maintenance in progress

# =============================================================================
# STAGING-SPECIFIC FEATURES
# =============================================================================

# Feature Flags Testing
VITE_ENABLE_FEATURE_FLAGS=true
VITE_FEATURE_FLAG_ENDPOINT=https://staging-flags.prmcms.com

# A/B Testing
VITE_ENABLE_AB_TESTING=true
VITE_AB_TEST_SAMPLE_RATE=0.5

# Beta Features
VITE_ENABLE_BETA_FEATURES=true
VITE_BETA_USER_WHITELIST=beta@prmcms.com,staging@prmcms.com

# =============================================================================
# INTEGRATION TESTING
# =============================================================================

# Third-party Service Testing
VITE_ENABLE_INTEGRATION_TESTS=true
VITE_MOCK_EXTERNAL_SERVICES=false

# Webhook Testing
VITE_WEBHOOK_TEST_ENDPOINT=https://staging-webhooks.prmcms.com
VITE_WEBHOOK_SECRET=your_staging_webhook_secret_here

# =============================================================================
# NOTES FOR STAGING
# =============================================================================

# 1. Staging should mirror production configuration as closely as possible
# 2. Use separate databases and services from production
# 3. Enable additional debugging and testing features
# 4. Test all production features before deploying
# 5. Use staging for integration testing and user acceptance testing
# 6. Regularly sync staging data with production (anonymized)

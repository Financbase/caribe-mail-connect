# Vite environment variables for Supabase and app config
# Copy this file to .env or .env.local and fill in your values

# Demo mode (bypasses real Supabase auth in dev if supported by the app)
VITE_USE_DEMO_MODE=false

# Supabase (Frontend)
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key

# Application
VITE_APP_ENV=development
VITE_APP_VERSION=0.0.0
NODE_ENV=development

# API
VITE_API_BASE_URL=http://localhost:3000

# Logging / DevTools
VITE_LOG_LEVEL=info
VITE_ENABLE_DEV_TOOLS=false

# Payment Integration (Story 1.1)
# Stripe Configuration
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# ATH MÃ³vil Configuration (Puerto Rico)
ATH_MOVIL_API_KEY=your_ath_movil_api_key
ATH_MOVIL_MERCHANT_ID=your_ath_movil_merchant_id
ATH_MOVIL_WEBHOOK_SECRET=your_ath_movil_webhook_secret

# Payment Processing
VITE_PAYMENT_ENVIRONMENT=sandbox
VITE_ENABLE_ATH_MOVIL=true
VITE_ENABLE_STRIPE=true

# Billing Configuration
VITE_DEFAULT_CURRENCY=USD
VITE_BILLING_GRACE_PERIOD_DAYS=5
VITE_PAYMENT_RETRY_ATTEMPTS=3

{
  "compilerOptions": {
    "allowJs": true,
    "lib": ["deno.window", "deno.ns"],
    "strict": true,
    "target": "es2022"
  },
  "imports": {
    "@std/http/server": "https://deno.land/std@0.220.1/http/server.ts",
    "@supabase/supabase-js": "https://esm.sh/@supabase/supabase-js@2.39.7"
  },
  "tasks": {
    "dev": "deno run --allow-net --allow-env --allow-read index.ts",
    "test": "deno test --allow-net --allow-env --allow-read"
  },
  "lint": {
    "include": ["**/*.ts"],
    "exclude": ["**/node_modules"]
  },
  "fmt": {
    "files": {
      "include": ["**/*.ts"],
      "exclude": ["**/node_modules"]
    },
    "options": {
      "useTabs": false,
      "lineWidth": 80,
      "indentWidth": 2,
      "singleQuote": true,
      "proseWrap": "always"
    }
  }
}
